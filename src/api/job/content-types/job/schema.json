      "type": "component",
      "repeatable": true,
      "component": "puesto.item",
      "required": true
    },
    "carreras": {
      "type": "component",
      "repeatable": true,
      "component": "puesto.item",
      "required": true
    },
    "conocimiento_deseado": {
      "type": "component",
      "repeatable": true,
      "component": "puesto.item",
      "required": true
